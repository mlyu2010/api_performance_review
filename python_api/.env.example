# Environment Configuration
# Copy this file to .env and fill in the values

# ============================================
# ENVIRONMENT
# ============================================
ENVIRONMENT=production  # development, staging, production

# ============================================
# DATABASE (PostgreSQL)
# ============================================
DATABASE_URL=postgres://postgres:CHANGE_THIS_PASSWORD@db:5432/agents_tasks_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD
POSTGRES_DB=agents_tasks_db
POSTGRES_PORT=5432

# Database connection pool
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# ============================================
# SECURITY (CRITICAL - CHANGE THESE!)
# ============================================
# Generate a strong SECRET_KEY with: openssl rand -hex 32
SECRET_KEY=CHANGE_THIS_TO_A_STRONG_RANDOM_STRING_AT_LEAST_32_CHARS
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ============================================
# CORS (CRITICAL - RESTRICT IN PRODUCTION!)
# ============================================
# Comma-separated list of allowed origins
# DO NOT USE * IN PRODUCTION!
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_CALLS=100
RATE_LIMIT_WINDOW=60  # seconds

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text

# ============================================
# SERVER
# ============================================
API_PORT=8000
WORKERS=4  # Number of Gunicorn workers (typically 2-4 x CPU cores)
MAX_CONNECTIONS=1000
KEEPALIVE=5

# ============================================
# OPTIONAL: Monitoring & Observability
# ============================================
# SENTRY_DSN=your_sentry_dsn_here
# METRICS_ENABLED=true
